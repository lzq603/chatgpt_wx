/* chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.message-list {
  flex-grow: 1;
  overflow-y: auto;
  padding: 10px;
}

.message-item {
  margin-bottom: 10px;
  display: flex;
  justify-content: flex-start;
}

.left {
  flex-direction: row;
}

.right {
  flex-direction: row-reverse;
}

.message-bubble {
  display: inline-block;
  padding: 10px;
  border-radius: 10px;
  max-width: 70%;
}

.left .message-bubble {
  background-color: #f0f0f0;
  color: #333;
}

.right .message-bubble {
  background-color: #0078d4;
  color: white;
}

.input-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background-color: #f0f0f0;
}

.input-field {
  flex-grow: 1;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 20px;
}

.send-button {
  margin-left: 10px;
  padding: 8px 15px;
  border: none;
  border-radius: 20px;
  background-color: #0078d4;
  color: white;
}
